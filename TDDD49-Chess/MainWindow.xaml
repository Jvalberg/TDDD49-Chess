<Window x:Class="TDDD49_Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:TDDD49_Chess.View"
        Title="Chess" Height="871" Width="1091"
        x:Name="mainWindow">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Resources/background.jpg" Stretch="None" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <view:MenuView Grid.Row="0"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        <ScrollViewer Grid.Row="1"
            VerticalScrollBarVisibility="Auto" 
            HorizontalScrollBarVisibility="Auto">
            <Border BorderThickness="30"
                    BorderBrush="BurlyWood"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <view:ChessBoardView />
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
